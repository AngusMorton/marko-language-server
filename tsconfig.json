{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2016"],
    "outDir": "out",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./clients/vscode" }, { "path": "./server" }]
}
