{
  "name": "marko-vscode",
  "displayName": "Marko VSCode",
  "description": "Marko Tooling for VSCode",
  "author": "Diego Berrocal",
  "license": "MIT",
  "version": "0.0.2",
  "publisher": "Marko-JS",
  "homepage": "https://github.com/marko-js/marko-language-server/tree/master/clients/vscode/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/marko-language-server/tree/master/clients/vscode/"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:marko"
  ],
  "contributes": {
    "languages": [
      {
        "id": "marko",
        "aliases": [
          "Marko",
          "marko"
        ],
        "extensions": [
          ".marko"
        ],
        "configuration": "./marko.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "marko",
        "scopeName": "text.marko",
        "path": "./syntaxes/marko.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "marko",
        "path": "./snippets/marko.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Marko Language Server configuration",
      "properties": {
        "marko.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the language server."
        }
      }
    }
  },
  "icon": "img/marko.png",
  "dependencies": {
    "@marko/language-server": "^0.0.2",
    "vscode-languageclient": "^5.2.1",
    "vscode": "^1.1.33"
  },
  "main": "./out/extension.js",
  "private": true
}
