{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "All",
      "configurations": ["Server", "Client"]
    }
  ],
  "configurations": [
    {
      "name": "Client",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/clients/vscode/"
      ],
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/clients/vscode/out/**/*.js"]
    },
    {
      "name": "Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/clients/vscode/server/**/*.js"],
      "protocol": "inspector"
    }
  ]
}
